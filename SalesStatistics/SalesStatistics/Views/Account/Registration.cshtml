@model SalesStatistics.Models.RegistrationModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Registration</h2>
<div id="registr_container">
    @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "form" }))
    {
        @Html.ValidationMessageFor(r => r.FirstName)
        <div class="form_row">
            <label class="regText">Имя:</label> @Html.TextBoxFor(r => r.FirstName, new {@class = "textBoxForRegistration"})
        </div>
        @Html.ValidationMessageFor(r => r.LastName)
        <div class="form_row">
            <label class="regText">Фамилия:</label> @Html.TextBoxFor(r => r.LastName, new {@class = "textBoxForRegistration"})

        </div>
        @Html.ValidationMessageFor(r => r.Password)
        <div class="form_row">
            <label class="regText">Пароль:</label> @Html.PasswordFor(r => r.Password, new {@class = "textBoxForRegistration"})

        </div>
        @Html.ValidationMessageFor(r => r.DPassword)
        <div class="form_row">
            <label class="regText">Повторите пароль:</label> @Html.PasswordFor(r => r.DPassword, new { @class = "textBoxForRegistration" })
            
        </div>
        <div class="form_row">
            <input type="submit" value="Зарегистрироваться" />
        </div>
    }
</div>
